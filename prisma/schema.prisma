generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Servicio {
  id_Servicio       Int            @id @default(autoincrement())
  nombre_titular    String
  titulo            String
  descripcion       String
  mail              String
  celular           String
  horario           String
  dia_Semana        String[]
  fecha_publicacion DateTime
  titulo_Servicio   ServicioTitulo
}

model Actividad {
  id_Actividad      Int      @id @default(autoincrement())
  fecha_publicacion DateTime
  titulo            String
  contenido         String
  fotos             String[]
  horario           String
  ubicacion         String
  dia_Semana        String[]
}

model EventosNoticia {
  id_EventoNoticia  Int       @id @default(autoincrement())
  fecha_publicacion DateTime
  titulo            String
  contenido         String
  foto              String
  fecha_evento      DateTime? // Que esto sea un check box que diga 'Es evento?' y que permita llenar este campo
}

model Alquiler {
  id_Alquiler        Int      @id @default(autoincrement())
  nombre_titular     String
  celular            String
  mail               String
  titulo             String
  descripcion        String
  ubicacion          String
  coordenadas        String
  capacidad          Int
  camas_dobles       Int
  camas_singles      Int
  agua_caliente      Boolean
  toallas            Boolean
  sabanas            Boolean
  tv                 Boolean
  wifi               Boolean
  piscina            Boolean
  parrilla           Boolean
  bano               Boolean
  cocina             Boolean
  heladera           Boolean
  horno              Boolean
  microondas         Boolean
  tostadora          Boolean
  aire_acondicionado Boolean
  estufa             Boolean
  frezzer            Boolean
  mascotas           Boolean
  fecha_publicacion  DateTime
  fotos              String[]
  precio             Decimal?
}

model Restaurant {
  id_Restaurant     Int      @id @default(autoincrement())
  nombre_titular    String
  celular           String
  mail              String
  descripcion       String
  coordenadas       String
  ubicacion         String
  tipo_pago         String[]
  titulo            String
  horario_semanal   String
  horario_finde     String
  domingo           Boolean
  instagram         String
  facebook          String
  web               String
  fotos             String[]
  fecha_publicacion DateTime
}

enum ServicioTitulo {
  Trasporte
  Cerrajero
  // Add other titles here
}

model Usuario {
  id       Int    @id @unique @default(autoincrement())
  nombre   String
  hashPass String
}
